    <ControlTemplate x:Key="FancyWindowTemplate"
                     TargetType="{x:Type Window}">
        <Border BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                Background="{DynamicResource WindowBackgorundBrush}">
            <Grid>
                <AdornerDecorator>
                    <DockPanel>
                        <Border Name="PART_DragBorder"
                                DockPanel.Dock="Top"
                                Height="20"
                                Background="{DynamicResource SelectedBackgroundBrush}">
                            <Button Content="X"
                                    Command="ApplicationCommands.Close"
                                    FontSize="12"
                                    Foreground="Black"
                                    Margin="0,0,5,0"
                                    Width="15"
                                    Height="15"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="{TemplateBinding Width}"
                                                Height="{TemplateBinding Height}"
                                                Background="Transparent">
                                            <Grid>
                                                <Ellipse x:Name="path1"
                                                         Height="15"
                                                         Width="15"
                                                         Fill="{x:Null}"
                                                         Stroke="{DynamicResource WindowBackgorundBrush}" />
                                                <Path x:Name="path2"
                                                      Data="M3.5139573,3.7068966 L10.262726,10.275041"
                                                      Margin="3.514,3.707,3.737,3.725"
                                                      Stretch="Fill"
                                                      Stroke="{DynamicResource WindowBackgorundBrush}">
                                                    <Path.Fill>
                                                        <RadialGradientBrush>
                                                            <GradientStop Color="#FF375A9D" />
                                                            <GradientStop Color="#FF558FCB"
                                                                          Offset="1" />
                                                        </RadialGradientBrush>
                                                    </Path.Fill>
                                                </Path>
                                                <Path x:Name="path3"
                                                      Data="M3.5139573,3.7068966 L10.262726,10.275041"
                                                      Margin="3.514,3.707,3.737,3.725"
                                                      Stretch="Fill"
                                                      RenderTransformOrigin="0.5,0.5"
                                                      Stroke="{DynamicResource WindowBackgorundBrush}">
                                                    <Path.RenderTransform>
                                                        <TransformGroup>
                                                            <ScaleTransform />
                                                            <SkewTransform />
                                                            <RotateTransform Angle="90.049" />
                                                            <TranslateTransform />
                                                        </TransformGroup>
                                                    </Path.RenderTransform>
                                                    <Path.Fill>
                                                        <RadialGradientBrush>
                                                            <GradientStop Color="#FF375A9D" />
                                                            <GradientStop Color="#FF558FCB"
                                                                          Offset="1" />
                                                        </RadialGradientBrush>
                                                    </Path.Fill>
                                                </Path>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                     Value="True">
                                                <Setter TargetName="path1"
                                                        Property="Stroke"
                                                        Value="White" />
                                                <Setter TargetName="path2"
                                                        Property="Stroke"
                                                        Value="White" />
                                                <Setter TargetName="path3"
                                                        Property="Stroke"
                                                        Value="White" />
                                            </Trigger>
                                            <Trigger Property="IsEnabled"
                                                     Value="False">
                                                <Setter TargetName="path1"
                                                        Property="Stroke"
                                                        Value="LightGray" />
                                                <Setter TargetName="path2"
                                                        Property="Stroke"
                                                        Value="LightGray" />
                                                <Setter TargetName="path3"
                                                        Property="Stroke"
                                                        Value="LightGray" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Border>
                        <ContentPresenter />
                    </DockPanel>
                </AdornerDecorator>

                <ResizeGrip x:Name="WindowResizeGrip"
                            HorizontalAlignment="Right"
                            IsTabStop="false"
                            Visibility="Collapsed"
                            VerticalAlignment="Bottom" />
            </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ResizeMode"
                               Value="CanResizeWithGrip" />
                    <Condition Property="WindowState"
                               Value="Normal" />
                </MultiTrigger.Conditions>
                <Setter Property="Visibility"
                        TargetName="WindowResizeGrip"
                        Value="Visible" />
            </MultiTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

